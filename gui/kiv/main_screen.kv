#:set dark_background [.0, .0, .0, 1.0]
#:set blue_button_1 [0.46, 0.34, 0.86, 1.0]
#:set light_blue_background [0.08, 0.17, 0.33, 1.0]
#:import VideoWidget gui.video.VideoWidget

<MainScreen>:
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: light_blue_background
            Rectangle:
                pos: self.pos
                size: self.size
        size_hint: 1, 1
        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, 0.8
            pos_hint : {'center_x':.5, 'center_y':.55}
            padding: [20, 20, 20, 20]
            spacing: 10
            Label:
                height: 10
                size_hint_y: None
                size_hint_x: 0.3
                font_size: 24
                text: "Camera"
                color: 1, 0, 0, 1
            VideoWidget:
                id: video
                allow_stretch: True
                port_num: 0
                size_hint_y: None
                height: 630
                animation_offset: 1
        BoxLayout:
            orientation: 'horizontal'
            padding: 0, 20, 0, 20
            size_hint_x: 0.7
            size_hint_y: None
            pos_hint : {'center_x':.5, 'center_y':.1}
            height: 70
            Label:
                size_hint_y: None
                height: 30
                text: "TimeStamp:"
                font_size: 20
            Label:
                size_hint_y: None
                height: 30
                id: time_stamp
                text: ""
                font_size: 20
            Label:
                size_hint_y: None
                height: 30
                text: "Num of Butts:"
                font_size: 20
            Label:
                size_hint_y: None
                height: 30
                id: butt_num
                text: ""
                font_size: 20
            Label:
                size_hint_y: None
                height: 30
                id: warn_txt
                text: ""
                font_size: 20
                color: 1, 0, 0, 1
        BoxLayout:
            padding: 0, 20, 0, 20
            size_hint_x: 0.7
            size_hint_y: None
            pos_hint : {'center_x':.5, 'center_y':.1}
            height: 90
            Button:
                size_hint_y: None
                height: 50
                text: "Database Info"
                font_size: 20
                background_color: blue_button_1
                on_press:
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'show_database'
